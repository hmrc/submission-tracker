<endpoint>
  <name>Tracking-Data</name>
  <description>This endpoint retrieves the tracking data from a tax identifier.</description>
  <section id="resource">
    <title>Resource</title>
    <resource>GET /tracking/:id/:idType</resource>
  </section>
  <section id="path-parameters">
    <title>Path Parameters</title>
    <table>
      <headings>
        <cell>Name</cell>
        <cell>Type</cell>
        <cell>Example</cell>
        <cell>Description</cell>
      </headings>
      <rows>
        <row>
          <cell><code>Id</code></cell>
          <cell><code>String</code></cell>
          <cell><code>NS123456B</code></cell>
          <cell>The NINO for the individual. This could also be a UTR.</cell>
        </row>
        <row>
          <cell><code>idType</code></cell>
          <cell><code>String</code></cell>
          <cell><code>nino</code></cell>
          <cell>The name of the tax identifier that is supplied in the 'id' field.</cell>
        </row>
      </rows>
    </table>
  </section>
  <section id="authorisation">
    <title>Authorisation</title>
    <authorisation>
      <type>USER</type>
      <scope>read:submission-tracker</scope>
    </authorisation>
  </section>
  <section id="content-types">
    <title>Accepted Media Types</title>
    <list>
      <item>
        <code>application/vnd.hmrc.1.0+json</code>
      </item>
    </list>
  </section>
  <section id="sample-response">
    <title>Response</title>
    <httpStatus>200 (OK)</httpStatus>
    <json><![CDATA[{
  "submissions": [
    {
      "formId": "formId",
      "formName": "formName",
      "dfsSubmissionReference": "ref1",
      "businessArea": "some-business",
      "receivedDate": "20150801",
      "completionDate": "20150801",
      "milestones": [
        {
          "milestone": "one",
          "status": "open"
        }
      ]
    }
  ]
}]]></json>
    <table>
      <headings>
        <cell>Name</cell>
        <cell>Type</cell>
        <cell>Example</cell>
        <cell>Description</cell>
      </headings>
      <rows>
        <row>
          <cell><code>formId</code></cell>
          <cell><code>String</code></cell>
          <cell><code>formId</code></cell>
          <cell>An example String value.</cell>
        </row>
        <row>
          <cell><code>formName</code></cell>
          <cell><code>String</code></cell>
          <cell><code>formName</code></cell>
          <cell>An example String value for the form name</cell>
        </row>
        <row>
          <cell><code>dfsSubmissionReference</code></cell>
          <cell><code>String</code></cell>
          <cell><code>some value</code></cell>
          <cell>An example dfsSubmissionReference.</cell>
        </row>
      </rows>
    </table>
  </section>
  <section id="error-responses">
    <title>Error Scenarios</title>
    <table>
      <headings>
        <cell>Error Scenario</cell>
        <cell>HTTP Status</cell>
        <cell>Code</cell>
      </headings>
      <rows>
        <row>
          <cell>Invalid NINO</cell>
          <cell><code>400 (Bad Request)</code></cell>
          <cell><code>NINO_INVALID</code></cell>
        </row>
      </rows>
    </table>
  </section>
</endpoint>